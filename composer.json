{
    "name": "firefly/filament-blog",
    "type": "library",
    "description": "An advance blog package for Filament Admin Panel",
    "keywords": [
        "filament",
        "laravel",
        "blog",
        "firefly"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Firefly\\FilamentBlog\\": "src/",
            "Firefly\\FilamentBlog\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Firefly\\FilamentBlog\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Asmit Nepali",
            "email": "asmit@thefireflytech.com",
            "homepage": "https://github.com/asmit-firefly",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "filament/support": "^3.6",
        "awcodes/filament-tiptap-editor": "3.x-dev"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Firefly\\FilamentBlog\\FilamentBlogServiceProvider"
            ]
        }
    },
    "require-dev": {
        "orchestra/testbench": "^9",
        "pestphp/pest": "^2",
        "pestphp/pest-plugin-laravel": "^2.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
